rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if user is the creator
    function isCreator(userId) {
      return request.auth.uid == userId;
    }

    // Voters Collection
    // 10k+ Scale: Only allow creating/reading, no massive list all without filters
    match /voters/{voterId} {
      allow create: if isAuthenticated() 
                      && request.resource.data.volunteerId == request.auth.uid; // Must tag self
      
      allow read: if isAuthenticated(); // Volunteers can see voters (for duplicate check)
      
      allow update: if isAuthenticated() 
                      && (resource.data.volunteerId == request.auth.uid || request.auth.token.role == 'admin');
    }

    // Volunteers Collection (For Leaderboard)
    match /volunteers/{userId} {
      allow read: if isAuthenticated();
      allow write: if isCreator(userId);
    }
  }
}
